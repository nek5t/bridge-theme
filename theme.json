{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "37rem",
			"wideSize": "53rem"
		},
		"typography": {
			"fluid": true,
			"fontSizes": [
				{
					"slug": "small",
					"size": "1rem",
					"name": "Small",
					"fluid": {
						"min": "0.8333rem",
						"max": "1.1667rem"
					}
				},
				{
					"slug": "medium",
					"size": "1.25rem",
					"name": "Medium",
					"fluid": {
						"min": "1rem",
						"max": "1.3611rem"
					}
				},
				{
					"slug": "large",
					"size": "2rem",
					"name": "Large",
					"fluid": {
						"min": "1.1667rem",
						"max": "1.8148rem"
					}
				},
				{
					"slug": "x-large",
					"size": "2.5rem",
					"name": "Extra Large",
					"fluid": {
						"min": "1.3611rem",
						"max": "2.7222rem"
					}
				}
			],
			"fontFamilies": [
				{
					"fontFamily": "InstrumentSans",
					"name": "Instrument Sans",
					"slug": "instrument-sans",
					"fontFace": [
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "400",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/InstrumentSans-Regular.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "400",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/InstrumentSans-Italic.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "500",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/InstrumentSans-Medium.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "500",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/InstrumentSans-MediumItalic.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "600",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/InstrumentSans-SemiBold.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "600",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/InstrumentSans-SemiBoldItalic.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "700",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/InstrumentSans-Bold.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "700",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/InstrumentSans-BoldItalic.woff2"
							]
						}
					]
				}
			]
		},
		"spacing": {
			"spacingScale": {
				"operator": "*",
				"increment": 1.3611,
				"steps": 7,
				"mediumStep": 2,
				"unit": "em"
			}
		}
	},
	"styles": {
		"css": "text-rendering: optimizeLegibility;",
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--instrument-sans)",
			"fontSize": "var(--wp--preset--font-size--medium)"
		},
		"spacing": {
			"padding": {
				"left": "var(--wp--preset--spacing--30)",
				"right": "var(--wp--preset--spacing--30)"
			}
		}
	}
}
