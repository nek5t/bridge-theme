{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "37rem",
			"wideSize": "53rem"
		},
		"typography": {
			"fluid": true,
			"fontSizes": [
				{
					"slug": "small",
					"size": "1rem",
					"name": "Small",
					"fluid": {
						"min": "0.8333rem",
						"max": "1.1667rem"
					}
				},
				{
					"slug": "medium",
					"size": "1.25rem",
					"name": "Medium",
					"fluid": {
						"min": "1rem",
						"max": "1.3611rem"
					}
				},
				{
					"slug": "large",
					"size": "2rem",
					"name": "Large",
					"fluid": {
						"min": "1.1667rem",
						"max": "1.8148rem"
					}
				},
				{
					"slug": "x-large",
					"size": "2.5rem",
					"name": "Extra Large",
					"fluid": {
						"min": "1.3611rem",
						"max": "2.7222rem"
					}
				}
			],
			"fontFamilies": [
				{
					"fontFamily": "InstrumentSans",
					"name": "Instrument Sans",
					"slug": "instrument-sans",
					"fontFace": [
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "400",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/InstrumentSans-Regular.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "400",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/InstrumentSans-Italic.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "500",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/InstrumentSans-Medium.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "500",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/InstrumentSans-MediumItalic.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "600",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/InstrumentSans-SemiBold.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "600",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/InstrumentSans-SemiBoldItalic.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "700",
							"fontStyle": "normal",
							"src": [
								"file:./assets/fonts/InstrumentSans-Bold.woff2"
							]
						},
						{
							"fontFamily": "InstrumentSans",
							"fontWeight": "700",
							"fontStyle": "italic",
							"src": [
								"file:./assets/fonts/InstrumentSans-BoldItalic.woff2"
							]
						}
					]
				}
			]
		},
		"spacing": {
			"spacingScale": {
				"operator": "*",
				"increment": 1.3611,
				"steps": 7,
				"mediumStep": 2,
				"unit": "em"
			}
		},
		"color": {
			"defaultPalette": false,
			"defaultDuotone": false,
			"defaultGradients": false,
			"palette": [
				{
					"color": "#1B2136",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#231B37",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#162C31",
					"name": "Accent",
					"slug": "accent"
				},
				{
					"color": "#060607",
					"name": "Black",
					"slug": "neutral-black"
				},
				{
					"color": "#2a2b2f",
					"name": "Dark Gray",
					"slug": "neutral-dark"
				},
				{
					"color": "#f8f8f8",
					"name": "Light Gray",
					"slug": "neutral-light"
				},
				{
					"color": "#fefefe",
					"name": "White",
					"slug": "neutral-white"
				},
				{
					"color": "transparent",
					"name": "Transparent",
					"slug": "transparent"
				}
			],
			"gradients": [
				{
					"gradient": "linear-gradient(168deg, var(--wp--preset--color--primary), var(--wp--preset--color--accent))",
					"name": "Dark Waters",
					"slug": "d-primary-to-accent"
				},
				{
					"gradient": "linear-gradient(168deg, var(--wp--preset--color--primary) 30%, var(--wp--preset--color--secondary))",
					"name": "Night Sky",
					"slug": "d-primary-to-secondary"
				},
				{
					"gradient": "linear-gradient(168deg, var(--wp--preset--color--neutral-dark), var(--wp--preset--color--neutral-black))",
					"name": "Midnight",
					"slug": "d-neutral-dark-to-black"
				},
				{
					"gradient": "linear-gradient(0deg, var(--wp--preset--color--neutral-dark) 2%, transparent)",
					"name": "Overlay",
					"slug": "v-neutral-dark-to-alpha"
				}
			],
			"duotone": [
				{
					"colors": ["#1B2136", "#f8f8f8"],
					"name": "Primary",
					"slug": "primary"
				},
				{
					"colors": ["#231B37", "#f8f8f8"],
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"colors": ["#162C31", "#f8f8f8"],
					"name": "Accent",
					"slug": "accent"
				},
				{
					"colors": ["#2a2b2f", "#f8f8f8"],
					"name": "Black and White",
					"slug": "black-and-white"
				}
			]
		}
	},
	"styles": {
		"css": "body { text-rendering: optimizeLegibility; }",
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--instrument-sans)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.5"
		},
		"spacing": {
			"padding": {
				"left": "var(--wp--preset--spacing--30)",
				"right": "var(--wp--preset--spacing--30)"
			}
		},
		"color": {
			"background": "var(--wp--preset--color--neutral-white)",
			"text": "var(--wp--preset--color--neutral-dark)"
		},
		"elements": {
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--neutral-light)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "1"
				},
				"spacing": {
					"padding": {
						"left": "var(--wp--preset--spacing--60)",
						"right": "var(--wp--preset--spacing--60)",
						"top": "var(--wp--preset--spacing--20)",
						"bottom": "var(--wp--preset--spacing--20)"
					}
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)"
					}
				}
			},
			"heading": {
				"typography": {
					"lineHeight": "1.1"
				}
			}
		},
		"blocks": {
			"core/button": {
				"css": "transition-property: background-color, border-color; transition-duration: 200ms; transition-timing-function: ease-out;",
				"variations": {
					"outline": {
						"color": {
							"text": "var(--wp--preset--color--primary)"
						}
					}
				}
			},
			"core/cover": {
				"color": {
					"text": "var(--wp--preset--color--neutral-light)"
				},
				"typography": {
					"letterSpacing": "1px",
					"fontWeight": "600"
				}
			}
		}
	}
}
