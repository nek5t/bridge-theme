{
  "name": "bridge-theme",
  "version": "1.0.0",
  "description": "A FSE theme for interstitial online spaces",
  "author": "Eric Phillips",
  "license": "GPL-3.0-or-later",
  "scripts": {
		"clean": "rimraf \"assets/**/dist\" -g",
    "postcss": "postcss \"assets/css/src\" --base \"assets/css/src\" --dir \"assets/css/dist\"",
    "watch:css": "onchange -i \"assets/css/src/**/*.css\" -- npm run postcss"
  },
  "devDependencies": {
    "cssnano": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^8.3.2",
    "rimraf": "^5.0.1"
  }
}
